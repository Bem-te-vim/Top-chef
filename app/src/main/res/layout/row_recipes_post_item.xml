<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="8dp"
        android:id="@+id/img_recipe_post"
        style="@style/ShapeableImageViewRoundedSquareForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/pexels"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <ImageButton
        android:id="@+id/btn_favorite_post"
        style="@style/btnRoundedForm"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/backgroundIc"
        android:contentDescription="@string/favorite"
        android:src="@drawable/round_favorite_fill_24"
        app:layout_constraintEnd_toEndOf="@id/img_recipe_post"
        app:layout_constraintTop_toTopOf="@id/img_recipe_post" />

    <TextView
        android:id="@+id/txt_title_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/WhiteForTxt"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/img_recipe_post"
        app:layout_constraintStart_toStartOf="@id/img_recipe_post"
        app:layout_constraintTop_toBottomOf="@id/img_recipe_post"
        tools:text="Burst Tomato Pasta" />

    <TextView
        android:id="@+id/txt_reviews_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_square_shape"
        android:backgroundTint="@color/backgroundIc"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:textColor="@color/WhiteForTxt"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/star_24dp_fill"
        app:layout_constraintStart_toStartOf="@id/img_recipe_post"
        app:layout_constraintTop_toTopOf="@id/img_recipe_post"
        tools:text="@string/reviews" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33333333"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>