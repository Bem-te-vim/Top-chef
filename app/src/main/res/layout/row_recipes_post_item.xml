<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_popular_recipe"
        style="@style/ShapeableImageViewRoundedSquareForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/pexels"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_favorite_popular_recipe"
        style="@style/btn_favorite"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/backgroundIc"
        android:contentDescription="@string/favorite"
        android:src="@drawable/round_favorite_fill_24"
        app:layout_constraintEnd_toEndOf="@id/img_popular_recipe"
        app:layout_constraintTop_toTopOf="@id/img_popular_recipe" />

    <TextView
        android:id="@+id/txt_popularRecipe_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/WhiteForTxt"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_popular_recipe"
        app:layout_constraintStart_toStartOf="@+id/img_popular_recipe"
        app:layout_constraintTop_toBottomOf="@+id/img_popular_recipe"
        tools:text="Burst Tomato Pasta" />

    <TextView
        android:id="@+id/txt_popularRecipe_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_square_shape"
        android:backgroundTint="@color/backgroundIc"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        tools:text="@string/reviews"
        android:textColor="@color/WhiteForTxt"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/star_24dp_fill"
        app:layout_constraintStart_toStartOf="@id/img_popular_recipe"
        app:layout_constraintTop_toTopOf="@id/img_popular_recipe" />
</androidx.constraintlayout.widget.ConstraintLayout>